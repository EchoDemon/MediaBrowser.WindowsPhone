<UserControl
    x:Class="MediaBrowser.Windows8.SettingsViews.GeneralSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="12,0,0,0">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="All the general settings for the app"
                       TextWrapping="Wrap"
                       Foreground="Black"
                       Style="{StaticResource BasicTextStyle}"/>
            <ToggleSwitch Header="Include trailers in recent items"
                          Style="{StaticResource LightToggleSwitch}"
                          IsOn="{Binding SpecificSettings.IncludeTrailersInRecentItems, Source={StaticResource Locator}, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
