<UserControl
    x:Class="MediaBrowser.Windows8.SettingsViews.ImageSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="The settings here relate to how some of the images in the app are handled."
                       TextWrapping="Wrap"
                       Foreground="Black"
                       Style="{StaticResource BasicTextStyle}" />
            <ToggleSwitch Header="Display cast images"
                          Style="{StaticResource LightToggleSwitch}"
                          IsOn="{Binding SpecificSettings.ShowCastImages, Source={StaticResource Locator}, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</UserControl>
