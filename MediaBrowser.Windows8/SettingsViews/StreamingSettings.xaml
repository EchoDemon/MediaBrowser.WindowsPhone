<UserControl
    x:Class="MediaBrowser.Windows8.SettingsViews.StreamingSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MediaBrowser.Windows8.SettingsViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <StackPanel Orientation="Vertical"
                    Margin="12,0,0,0">
            <TextBlock Text="Depending on the internet connection available to you, you might need to drop the quality of the video that gets streamed, you can do so here."
                       TextWrapping="Wrap"
                       Foreground="Black"
                       Style="{StaticResource BasicTextStyle}" />
            <ComboBox x:Name="VideoStreamingQuality"
                      HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
